                        </ComboBoxItem>
                        <ComboBoxItem>
                            <Grid>
                                <Rectangle Fill="White"/>
                                <TextBlock Foreground="Black" Text="9"/>
                            </Grid>
                        </ComboBoxItem>
                    </ComboBox>
                    <!--#endregion-->
                    
                    <!--#region Multiplier -->
                    <ComboBox x:Name="Mult" Margin="8" Width="70" ToolTip="Multiplier" SelectedIndex="0" Foreground="White" SelectionChanged="Band_SelectionChanged">
                        <ComboBoxItem>
                            <Grid>
                                <Rectangle Fill="Silver"/>
                                <TextBlock Foreground="Black" Text="0.01"/>
                            </Grid>
                        </ComboBoxItem>
                        <ComboBoxItem>
                            <Grid>
                                <Rectangle Fill="Gold"/>
                                <TextBlock Text="0.1"/>
                            </Grid>
                        </ComboBoxItem>
                        <ComboBoxItem>
                            <Grid>
                                <Rectangle Fill="Black"/>
                                <TextBlock Text="1"/>
                            </Grid>
                        </ComboBoxItem>
                        <ComboBoxItem>
                            <Grid>
                                <Rectangle Fill="SaddleBrown"/>
                                <TextBlock Text="10"/>
                            </Grid>
                        </ComboBoxItem>
                        <ComboBoxItem>
                            <Grid>
                                <Rectangle Fill="Red"/>
                                <TextBlock Text="100"/>
                            </Grid>
                        </ComboBoxItem>
                        <ComboBoxItem>
                            <Grid>
                                <Rectangle Fill="Orange"/>
